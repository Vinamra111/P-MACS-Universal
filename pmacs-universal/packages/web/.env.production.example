# P-MACS Production Environment
# This file should be copied to .env.production and customized for your production environment

NODE_ENV=production
OPENAI_API_KEY=your-production-openai-key
OPENAI_MODEL=gpt-4o
NEXT_PUBLIC_API_URL=https://pmacs.your-hospital.com

# Security
SESSION_SECRET=production-secret-generate-new-one
RATE_LIMIT_MAX_REQUESTS=100
REQUIRE_HTTPS=true
CSP_ENABLED=true

# Database
DATA_PATH=/var/pmacs/data
ENABLE_DATABASE_CACHE=true
CACHE_TTL_SECONDS=300

# Backups
ENABLE_AUTO_BACKUP=true
BACKUP_PATH=/var/pmacs/backups
BACKUP_INTERVAL_HOURS=4

# Monitoring
LOG_LEVEL=warn
ENABLE_PERFORMANCE_MONITORING=true
