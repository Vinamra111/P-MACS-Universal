# P-MACS Production Environment Configuration
# Copy this file to .env.local for development or .env.production for production

# ============================================================
# CRITICAL: OpenAI API Configuration
# ============================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0

# ============================================================
# Application Configuration
# ============================================================
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://your-domain.com
PORT=3000

# ============================================================
# Database Configuration
# ============================================================
DATA_PATH=../api/data
ENABLE_DATABASE_CACHE=true
CACHE_TTL_SECONDS=300

# ============================================================
# Security Configuration
# ============================================================
# Session secret for JWT (generate with: openssl rand -base64 32)
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# ============================================================
# Monitoring & Logging
# ============================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# ============================================================
# Backup Configuration
# ============================================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=../backups

# ============================================================
# Feature Flags
# ============================================================
ENABLE_ADMIN_DASHBOARD=true
ENABLE_NURSE_CHAT=true
ENABLE_PHARMACIST_CHAT=true
ENABLE_REAL_TIME_UPDATES=true

# ============================================================
# Performance Optimization
# ============================================================
# Auto-refresh intervals (milliseconds)
ADMIN_REFRESH_INTERVAL=5000
DASHBOARD_REFRESH_INTERVAL=30000

# Agent timeout (milliseconds)
AGENT_TIMEOUT_MS=30000
NURSE_AGENT_TIMEOUT_MS=15000

# ============================================================
# Production Security
# ============================================================
# Require HTTPS in production
REQUIRE_HTTPS=true

# Content Security Policy
CSP_ENABLED=true

# HTTP Strict Transport Security (HSTS)
HSTS_MAX_AGE=31536000

# ============================================================
# Email Notifications (Optional)
# ============================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# ALERT_EMAIL=admin@your-domain.com
