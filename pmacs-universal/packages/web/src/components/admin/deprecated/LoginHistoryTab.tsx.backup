'use client';

interface AccessLog {
  timestamp: string;
  empId: string;
  action: string;
  role: string;
  details: string;
}

interface LoginHistoryTabProps {
  accessLogs: AccessLog[];
}

export default function LoginHistoryTab({ accessLogs }: LoginHistoryTabProps) {
  const totalLogins = accessLogs.filter(log => log.action === 'LOGIN').length;
  const failedLogins = accessLogs.filter(log => log.action === 'FAILED_LOGIN').length;
  const todayLogins = accessLogs.filter(log =>
    log.timestamp.startsWith(new Date().toISOString().slice(0, 10))
  ).length;

  return (
    <div>
      <h2 className="text-2xl font-semibold text-gray-900 mb-6">Login History</h2>

      <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        {/* Total Logins - Green (positive) */}
        <div className="bg-green-50 border border-green-200 p-4 rounded-lg">
          <div className="text-3xl font-bold text-green-900">{totalLogins}</div>
          <div className="text-sm text-green-700 font-medium">Total Logins</div>
        </div>

        {/* Failed Attempts - Red (critical) */}
        <div className="bg-red-50 border border-red-200 p-4 rounded-lg">
          <div className="text-3xl font-bold text-red-900">{failedLogins}</div>
          <div className="text-sm text-red-700 font-medium">Failed Attempts</div>
        </div>

        {/* Today's Activity - Blue (informational) */}
        <div className="bg-blue-50 border border-blue-200 p-4 rounded-lg">
          <div className="text-3xl font-bold text-blue-900">{todayLogins}</div>
          <div className="text-sm text-blue-700 font-medium">Today's Activity</div>
        </div>
      </div>

      <h3 className="text-lg font-semibold mb-4">Recent Activity (Live Updates)</h3>
      <div className="overflow-x-auto border rounded-lg">
        <table className="min-w-full divide-y divide-gray-200">
          <thead className="bg-gray-50">
            <tr>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">User</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Details</th>
            </tr>
          </thead>
          <tbody className="bg-white divide-y">
            {accessLogs.slice(0, 50).map((log, index) => (
              <tr key={index} className="hover:bg-gray-50">
                <td className="px-6 py-4 whitespace-nowrap text-sm">{log.timestamp}</td>
                <td className="px-6 py-4 whitespace-nowrap text-sm font-medium">{log.empId}</td>
                <td className="px-6 py-4 whitespace-nowrap">
                  <span className={`px-2 py-1 text-xs font-medium rounded-full ${
                    log.action === 'LOGIN' ? 'bg-green-100 text-green-800' :
                    log.action === 'FAILED_LOGIN' ? 'bg-amber-100 text-amber-800' :
                    log.action === 'BLOCKED_LOGIN' ? 'bg-red-100 text-red-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {log.action}
                  </span>
                </td>
                <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{log.role}</td>
                <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{log.details}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  );
}
