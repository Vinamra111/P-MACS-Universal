{
  "name": "pmacs-universal",
  "version": "1.0.0",
  "private": true,
  "description": "P-MACS Universal - Pharmacy Management and Control System",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:api": "pnpm --filter @pmacs/api dev",
    "dev:core": "pnpm --filter @pmacs/core dev",
    "build:core": "pnpm --filter @pmacs/core build",
    "build:api": "pnpm --filter @pmacs/api build"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "eslint": "^9.17.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
